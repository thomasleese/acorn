import 'base/types'

## Exit the program.
##
## - Parameters
##   - code: The exit code.
def exit(code as Int):
    ccall exit(Int) as Void using code


## Abort the program.
def abort():
    ccall abort() as Void


## Swap the value of two variables.
def swap{T}(inout a as T, inout b as T):
    let old_a = a
    a = b
    b = old_a
