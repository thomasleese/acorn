def malloc(size as Integer) as UnsafePointer{Integer8}
    let pointer = ccall malloc(Integer) as UnsafePointer{Integer8} using size
    return pointer
end

def free{T}(pointer as UnsafePointer{T}) as Void
    let raw_pointer = pointer as UnsafePointer{Integer8}
    ccall free(UnsafePointer{Integer8}) as Void using raw_pointer
end
